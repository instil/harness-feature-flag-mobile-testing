<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="co.instil.surgeandroiddemoapp.MainActivity">

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-1dp"
        app:layout_constraintBottom_toTopOf="@id/playerBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/streamButton" />

    <View
        android:id="@+id/background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="@id/url"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/url"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/streamButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startStream"
        android:text="Stream"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/url"
        app:layout_constraintTop_toTopOf="@+id/url" />

    <EditText
        android:id="@+id/url"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:inputType="textUri"
        android:text="rtsp://192.168.1.11:8554/test"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/textureView"
        app:layout_constraintEnd_toStartOf="@+id/streamButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.constraint.Group
        android:id="@+id/group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="383dp"
        android:layout_marginStart="1dp"
        android:background="#000000"
        app:constraint_referenced_ids="streamButton,url,background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/playerBar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textureView"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/pauseButton"
        style="@android:style/MediaButton.Play"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:onClick="pauseStream"
        android:text=""
        android:background="@drawable/baseline_pause_24"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/playerBar"
        app:layout_constraintStart_toEndOf="@+id/playButton"
        app:layout_constraintTop_toTopOf="@+id/playerBar" />

    <Button
        android:id="@+id/playButton"
        style="@android:style/MediaButton.Play"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:onClick="playStream"
        android:text=""
        android:background="@drawable/baseline_play_arrow_24"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@+id/playerBar"
        app:layout_constraintBottom_toBottomOf="@+id/playerBar"
        app:layout_constraintStart_toStartOf="@id/playerBar"
        app:layout_constraintEnd_toEndOf="@id/playerBar"
        app:layout_constraintHorizontal_bias="0.5"
        tools:layout_editor_absoluteY="461dp" />

</android.support.constraint.ConstraintLayout>
